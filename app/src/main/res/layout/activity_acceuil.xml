<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#747EB3"
    android:layout_gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="178dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:background="@drawable/backg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tableau de Bord"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_weight="0"

        android:gravity="center"
        android:orientation="vertical">

    </LinearLayout>

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">

            <Button
                android:id="@+id/capteurbtn1"
                android:onClick="allerVers1"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#9A6EEA"
                android:textColor="@color/white"
                android:text="Exercice 01" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1">

            <Button
                android:id="@+id/capteurbtn2"
                android:onClick="allerVers2"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#9A6EEA"
                android:textColor="@color/white"
                android:text="Exercice 02" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1">

            <Button
                android:id="@+id/capteurbtn3"
                android:onClick="allerVers3"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#9A6EEA"
                android:textColor="@color/white"
                android:text="Exercice 03" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1">

            <Button
                android:id="@+id/capteurbtn4"
                android:onClick="allerVers4"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#9A6EEA"
                android:textColor="@color/white"
                android:text="Exercice 04" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1">

            <Button
                android:id="@+id/capteurbtn5"
                android:onClick="allerVers5"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#9A6EEA"
                android:textColor="@color/white"
                android:text="Exercice 05" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            >

            <Button
                android:id="@+id/capteurbtn6"
                android:onClick="allerVers6"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#9A6EEA"
                android:text="Exercice 06"
                android:textColor="@color/white"/>
        </LinearLayout>



    </GridLayout>
    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_weight="0"

        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/capteurbtn7"
            android:onClick="allerVers7"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="7"
            android:backgroundTint="#9A6EEA"
            android:text="Exercice 07"
            android:textColor="@color/white"/>
    </LinearLayout>



</LinearLayout>
